<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/beijing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

         <TextView 
            android:id="@+id/txt2_time"
           android:layout_marginTop="10dp" 
           android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22dp"
            />
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
       android:layout_marginTop="30dp"  >
       <TextView 
            android:id="@+id/txt2_1"
             android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="100dp"
           />
       <TextView 
            android:id="@+id/txt2_2"
            android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:width="100dp"
            android:height="100dp"
          
            />
       <TextView 
            android:id="@+id/txt2_3"
             android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:width="100dp"
            android:height="100dp"/>
          </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" 
         >
          <TextView 
            android:id="@+id/txt2_4"
            android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="100dp"
            />
       <TextView 
            android:id="@+id/txt2_5"
             android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="100dp"
           />
        <TextView 
            android:id="@+id/txt2_6"
             android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="100dp"/>
       </LinearLayout>
       
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
       
       
       <TextView 
            android:id="@+id/txt2_7"
            android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:width="100dp"
            android:height="100dp"
           />
        <TextView 
            android:id="@+id/txt2_8"
            android:background="@drawable/dong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:width="100dp"
            android:height="100dp"
          />
         <TextView 
            android:id="@+id/txt2_9"
             android:background="@drawable/dong1"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:width="100dp"
            android:height="100dp"/>
        </LinearLayout>
        
        <TextView 
            android:id="@+id/txt2_out"
             android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>
       
     
            
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn2_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text="开始" 
               />

        <Button
            android:id="@+id/btn2_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text="返回"
             />

    </LinearLayout>
   
</LinearLayout>
    
    

